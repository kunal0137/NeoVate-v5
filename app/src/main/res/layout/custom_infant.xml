<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusableInTouchMode="true"
    android:padding="2dp"
    android:weightSum="1"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#1B3277"
        android:id="@+id/tableRow1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/textView3"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#1B3277"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textIsSelectable="false"
           />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Heart Rate (BPM)"
            android:id="@+id/textView4"
            android:layout_column="17"
            android:layout_margin="3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#1B3277"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textIsSelectable="false"
         />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Resp. Rate"
            android:id="@+id/textView6"
            android:layout_column="20"
            android:layout_margin="3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#1B3277"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textIsSelectable="false"
           />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Temp"
            android:id="@+id/textView7"
            android:layout_column="22"
            android:layout_margin="3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#1B3277"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textIsSelectable="false"
          />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Oxygen Sat"
            android:id="@+id/textView8"
            android:layout_column="29"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="#1B3277"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textIsSelectable="false"
       />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/inName"
            android:layout_column="0"
            android:textAlignment="inherit"
            android:singleLine="true"
            android:nestedScrollingEnabled="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/inHeartRate"
            android:layout_column="17"
            android:textAlignment="inherit"
            android:singleLine="true"
            android:nestedScrollingEnabled="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/inRespRate"
            android:layout_column="20"
            android:textAlignment="inherit"
            android:singleLine="true"
            android:nestedScrollingEnabled="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/inTemp"
            android:layout_column="22"
            android:textAlignment="inherit"
            android:singleLine="true"
            android:nestedScrollingEnabled="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/inOxSat"
            android:layout_column="29"
            android:textAlignment="inherit"
            android:singleLine="true"
            android:nestedScrollingEnabled="true" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

</TableLayout>